@page
@model RazorPagesDemo.Pages.Connections.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Connection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Connection.CarrierID" class="control-label"></label>
                <select asp-for="Connection.CarrierID" class ="form-control" asp-items="ViewBag.CarrierID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Connection.RouteID" class="control-label"></label>
                <select asp-for="Connection.RouteID" class ="form-control" asp-items="ViewBag.RouteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Connection.Start" class="control-label"></label>
                <input asp-for="Connection.Start" class="form-control" />
                <span asp-validation-for="Connection.Start" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Connection.CarriesBikes" /> @Html.DisplayNameFor(model => model.Connection.CarriesBikes)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Connection.IsLowRise" /> @Html.DisplayNameFor(model => model.Connection.IsLowRise)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
